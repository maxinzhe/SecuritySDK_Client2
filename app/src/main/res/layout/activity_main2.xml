<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ccit.security.sdk.clientDemo.Main2Activity"
    android:orientation="vertical"
    android:gravity="center"
    android:theme="@android:style/Theme.Light.NoTitleBar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加密通信客户端"
        android:id="@+id/textView8"
        android:textSize="40dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="false"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="15dp">

            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/imageButton"
                android:background="@drawable/cert"
                android:clickable="true"
                android:enabled="true"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="证书注册"
                android:id="@+id/textView9"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="15dp">

            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/imageButton2"
                android:background="@drawable/call"
                android:clickable="true"
                android:enabled="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加密电话"
                android:id="@+id/textView10"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="15dp">

            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/imageButton3"
                android:background="@android:drawable/ic_lock_idle_low_battery"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView11"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="15dp">

            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/imageButton4"
                android:background="@drawable/imagebutton_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView12"
                android:textSize="20dp" />
        </LinearLayout>

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完全退出"
        android:id="@+id/quit" />
</LinearLayout>
